            });
        }
        function getCancle() {
            document.getElementById('delete').disabled = true;
            document.getElementById('edit').disabled = true;
            document.getElementById('cancelbtn').disabled = false;
        }
        $('#event-modal-save').on('hidden.bs.modal', function () {
