                    } else {
                        alert("เกิดข้อผิดพลาด บันทึกไม่สำเร็จ");
                    }
                }
            });
        }
        function getDelete() {
            let data = {
                'id': $('#delete').val(),
            }
            $.ajax({
                type: 'POST',
                url: '/Setting/UserSetting?handler=Delete',
                headers: {
                    RequestVerificationToken:
                        $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                contentType: 'application/json; charset=utf-8',
